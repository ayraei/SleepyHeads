import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.Random;


/**
 *  Randomly divides up a training file into 10 files of roughly equal size.
 **/
public class SplitDataApp {
	// Fields
	/** Location of training file **/
	private static String fileLoc = 
			"/Users/debranangel/Documents/2014-15/CNS156b/um_sorted/training.dta";
	
	/** Number of files to split into **/
	private int numFiles;
	
	/** Program entry point **/
	public static void main(String[] args) {
		String line;
		BufferedReader br = null;

		// Create buffered reader
		try {
			br = new BufferedReader(new FileReader(fileLoc));

		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}

		// Read in each line
		try {
			// Randomly pick a file
			Random generator = new Random(); 
			
			while ((line = br.readLine()) != null) {
				// Randomly select a number from 0 to numFiles with uniform distribution
				int n = generator.nextInt(10);
				PrintWriter out = new PrintWriter(n + "training.dta");
				
				out.println(line);
				
				// Close files
				out.close();
			}

			

		} catch (IOException e) {
			e.printStackTrace();
		}

	}

}
